{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "easydesktopapp",
  "version": "0.1.0",
  "identifier": "com.robin.easydesktopapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "冰箱外观检测系统",
        "width": 1600,
        "height": 900,
        "decorations": false,
        "transparent": false,
        "resizable":  true,
        "minimizable": true,
        "maximizable": true,
        "devtools": true
      }
    ], 
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
